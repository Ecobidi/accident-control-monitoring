<%- include ('../partials/client-top') %>
<div class="jumbotron d-flex justify-content-center align-items-center md-banner text-white">
  <h3 class="title">Accident Control / Monitoring</h3>
</div>

<div class="container">
  <h3 class="mb-3">Recent Accident Reports</h3>
  <% accidents.forEach(m => { %>
    <div class="row py-2 mb-2 bg-white" style="margin-top: 2em; box-shadow: 0px 0px 5px -1px rgb(0 0 0 / 37%);">
      <div class="col-md-3">
        <img src='<%= m.image || "/images/md-banner.jpg" %>' class="img-responsive" alt="" style="max-height: 165px; width: 100%; ">
      </div>
      <div class="col-md-6">
        <h5>Location: <%= m.location %></h5>
        <h6><strong>Road : <%= m.road %></strong></h6>
        <p class="text-muted mb-0"><b>Est. Time :</b> <%= m.time_of_incident.toLocaleString('fr') %></p>
        <p class="text-muted"><b>Report</b>  <%= m.report %></p>
      </div>
      <div class="clearfix"></div>
    </div>
  <% }) %>  
</div>

<%- include ('../partials/client-bottom') %>